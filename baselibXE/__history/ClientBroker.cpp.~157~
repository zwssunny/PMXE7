	Opts << loCaseInsensitive;
	bool retval = FModuleRight->Locate("modulecode", dwModule, Opts);
	if(retval)
	{
	   String szBuff = FModuleRight->FieldByName("classcode")->AsString;
	   retDword = szBuff.ToInt();
	}
	return retDword;
}
