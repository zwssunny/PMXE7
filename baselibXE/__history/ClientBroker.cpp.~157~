bool __fastcall TClientBroker::ChangePwd(String szNewPwd)
{
	String errMsg;
	bool retResult=false;
	retResult=LoginUserClient->ChangePassword(FUserCode,FPassword,szNewPwd,errMsg);
	if(retResult==false)
	ShowMessage(errMsg);
	return retResult;
}
