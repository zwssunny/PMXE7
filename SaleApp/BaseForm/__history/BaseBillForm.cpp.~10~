{
  if(DetailCount>0)
  {
    DS_DetailFirst();
    DisplayDetail();
  }
}
//---------------------------------------------------------------------------
void __fastcall TfrmBaseBillForm::DetailLast()
{
  if(DetailCount>0)
  {
    DS_DetailLast();
    DisplayDetail();
  }
}
//---------------------------------------------------------------------------
